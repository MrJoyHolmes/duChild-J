.container{
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/*  */
.activity-container{
height:380rpx;
width: 90%;
box-sizing: border-box;
/* font-size: 14px; */
background-color: #fff;
border-radius: 30rpx;
padding-top: 10rpx;
display: flex;
flex-direction: column;
margin: auto;
margin-top: 60rpx;
}

.activity-cover{
  height: 250rpx;
  width: 95%;
  margin:auto;
  /* border:solid 1rpx black; */
  margin-top:-50rpx;
  
}

.activity-cover image{
  width: 100%;
  height: 100%;
  border: 0 none;
  vertical-align: top;
}
.activity-info{
  height: 180rpx;
  width:95%;
  padding-left: 15rpx;
  margin:auto;
  margin-top: 10rpx;
  /* border: 2rpx solid #1616a0; */
}

.activity-title{
  font-size: 35rpx;
  font-family: Arial, Helvetica, sans-serif;

}

.activity-content{
  font-size: 25rpx;
  color: #999;
  margin-top: 5rpx;
}
